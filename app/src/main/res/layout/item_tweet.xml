<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="tweet"
    type="com.fs.jayrek.trainingtask.model.model.TweetModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@id/rlParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <ImageView-->
<!--                android:id="@+id/tweetImage"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                app:circleImageUrl="@{tweet.profileImage}"/>-->
<!--            android:layout_toEndOf="@+id/tweetImage"-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{tweet.userName + " " + tweet.screenName}'
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tweet.text}"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_below="@+id/rlParent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />
    </RelativeLayout>
</layout>